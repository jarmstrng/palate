<%= form_for @event, :html => {:class => "pure-form"} do |f|%>
  <fieldset>
    <%= f.text_field :name, placeholder: "Name" %><br>

    <%= f.date_field :date %><br>

    <%= f.time_field :time %><br>

    <%= f.text_field :location, placeholder: "Location" %><br>

    <%= f.submit 'Save', class: 'pure-button' %>
  </fieldset>

  <%= text_area_tag :emails, "Enter emails separated by commas" %><br>
<% end %>
